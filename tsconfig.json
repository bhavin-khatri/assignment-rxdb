{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,            // ✅ avoids type errors in deps like rxdb/plugins
    "resolveJsonModule": true,
    "strict": true,                  // optional: turn off if too strict
    "noEmit": true,
    "types": ["node"]                // ✅ so you can import 'process', etc
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "declarations.d.ts",
    "global.d.ts",
    "node_modules/@types/node/timers.d.ts",
    "node_modules/react-native/src/types/globals.d.ts",
    "node_modules/react-native/src/types/globals.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ]
}
